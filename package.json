{
  "name": "crud-api",
  "version": "0.9.0",
  "description": "Simple CRUD API with in-memory database",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon ./src/index.ts",
    "start:prod": "npm run build && node ./bundle/index.cjs",
    "start:multi": "npm run build && node ./bundle/index.cjs --multi",
    "make": "tsc",
    "build": "npm run make && npx webpack",
    "test": "npm run build && cross-env NODE_OPTIONS=--experimental-vm-modules jest --testTimeout=10000 --detectOpenHandles",
    "test:multi": "npx newman run ./__tests__/CRUD_API.postman_collection.json --env-var PORT=4000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HamSilver/crud-api.git"
  },
  "keywords": [],
  "author": "Stanislav Kolpakov (HamSilver)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HamSilver/crud-api/issues"
  },
  "type": "module",
  "homepage": "https://github.com/HamSilver/crud-api#readme",
  "dependencies": {
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "newman": "^5.3.2",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.3.1",
    "supertest": "^6.3.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
